<% include ../partials/header %>

<div class="container">
	<div class="row form-center">
		<h1>Edit Review for <%= place.name %></h1>
		<hr>
		<form action="/places/<%= place._id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="number" name="rating" value="<%= review.rating %>" min="1" max="5">
			</div>
			
			<div class="form-group">
				<input class="form-control" type="text" name="author" value="<%= review.author %>">
			</div>
			
			<div class="form-group">
				<textarea class="form-control" rows="10" name="content"><%= review.content %></textarea>
			</div>

			<div class="form-group">
				<button class="btn btn-primary btn-lg btn-block">Submit</button>
			</div>
		</form>
		<div class="form-group">
			<a href="/places/<%= place._id %>"><button class="btn btn-danger btn-lg btn-block">Cancel</button></a>
		</div>
	</div>
</div>

<% include ../partials/footer %>