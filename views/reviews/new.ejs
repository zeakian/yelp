<% include ../partials/header %>

<div class="container">
	<div class="row form-center">
		<h1>Add Review for <%= place.name %></h1>
		<hr>
		<form action="/places/<%= place._id %>/reviews" method="POST">
			<div class="form-group">
				<input class="form-control" type="number" name="rating" placeholder="Rating (1 to 5 stars)" min="1" max="5">
			</div>
			
			<div class="form-group">
				<input class="form-control" type="text" name="author" placeholder="Author">
			</div>
			
			<div class="form-group">
				<textarea class="form-control" rows="10" name="content" placeholder="Review"></textarea>
			</div>

			<div class="form-group">
				<button class="btn btn-primary btn-lg btn-block">Submit</button>
			</div>
		</form>
		<div class="form-group">
			<a href="/places/<%= place._id %>"><button class="btn btn-danger btn-lg btn-block">Cancel</button></a>
		</div>
	</div>
</div>

<% include ../partials/footer %>