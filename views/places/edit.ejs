<% include ../partials/header %>

<div class="container">
	<div class="row form-center">
		<h1>Edit <%= place.name %></h1>
		<hr>
		<form action="/places/<%= place._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="name" value="<%= place.name %>">
			</div>
			
			<div class="form-group">
				<input class="form-control" type="text" name="image" value="<%= place.image %>">
			</div>
			
			<div class="form-group">
				<textarea class="form-control" rows="10" name="description"><%= place.description %></textarea>
			</div>

			<div class="form-group">
				<button class="btn btn-primary btn-lg btn-block">Submit</button>
			</div>
		</form>
		<div class="form-group">
			<a href="/places/<%= place._id %>"><button class="btn btn-danger btn-lg btn-block">Cancel</button></a>
		</div>
	</div>
</div>

<% include ../partials/footer %>